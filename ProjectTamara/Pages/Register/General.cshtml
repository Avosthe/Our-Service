@page
@model GeneralModel
@{
}

<h2>Register as a regular user!</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputGeneralUser.GeneralUserId"></label>
                <input id="beneficiary_code" asp-for="InputGeneralUser.GeneralUserId" class="form-control" />
                <span asp-validation-for="InputGeneralUser.GeneralUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input id="beneficiary_code" asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="clear: both;">
                <label asp-for="InputGeneralUser.FullName"></label>
                <input asp-for="InputGeneralUser.FullName" class="form-control" />
                <span asp-validation-for="InputGeneralUser.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputGeneralUser.Occupation"></label>
                <input asp-for="InputGeneralUser.Occupation" class="form-control" />
                <span asp-validation-for="InputGeneralUser.Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputGeneralUser.Age"></label>
                <input asp-for="InputGeneralUser.Age" class="form-control" />
                <span asp-validation-for="InputGeneralUser.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputGeneralUser.Income"></label>
                <input asp-for="InputGeneralUser.Income" class="form-control" />
                <span asp-validation-for="InputGeneralUser.Income" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}