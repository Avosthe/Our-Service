@page
@model ProjectTamara.Pages.Register.CompanyModel
@{
    ViewData["Title"] = "Company";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Register as a Company</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputCompany.CompanyId"></label>
                <input id="beneficiary_code" asp-for="InputCompany.CompanyId" class="form-control" />
                <span asp-validation-for="InputCompany.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input id="beneficiary_code" asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="clear: both;">
                <label asp-for="InputCompany.CompanyName"></label>
                <input asp-for="InputCompany.CompanyName" class="form-control" />
                <span asp-validation-for="InputCompany.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyLogo"></label>
                <input asp-for="CompanyLogo" class="form-control" />
                <span asp-validation-for="CompanyLogo" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}